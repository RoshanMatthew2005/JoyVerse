{
  "name": "joyverse-api",
  "version": "1.0.0",
  "description": "Backend API for Joyverse - A therapeutic gaming platform for mental health",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --watchAll --verbose",
    "test:coverage": "jest --coverage",
    "seed": "node -e \"require('./src/utils/seedData').seedData().then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); })\"",
    "clear-db": "node -e \"require('./src/utils/seedData').clearData().then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); })\"",
    "generate-test-data": "node -e \"require('./src/utils/seedData').generateTestData(50).then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); })\"",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "validate": "npm run lint && npm run test",
    "build": "echo 'Build process completed'",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "keywords": [
    "joyverse",
    "mental-health",
    "therapy",
    "gaming",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "healthcare"
  ],
  "author": "Joyverse Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.7",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joyverse/joyverse-api.git"
  },
  "bugs": {
    "url": "https://github.com/joyverse/joyverse-api/issues"
  },
  "homepage": "https://github.com/joyverse/joyverse-api#readme",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/utils/seedData.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "printWidth": 80
  }
}
