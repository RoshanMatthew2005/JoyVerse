<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hugging Face Emotion Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 20px;
            background-color: #f5f5f5;
        }
        #game-container {
            margin: 0 auto;
            width: 90%;
            max-width: 600px;
            border: 2px solid #6a5acd;
            padding: 20px;
            border-radius: 10px;
            background-color: white;
        }
        #click-button {
            padding: 15px 30px;
            font-size: 18px;
            background-color: #6a5acd;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin: 20px;
        }
        #video-container {
            margin: 20px auto;
            width: 320px;
            height: 240px;
            border: 2px solid #6a5acd;
        }
        #video {
            width: 100%;
            height: 100%;
            background-color: #ddd;
        }
        #score-display {
            font-size: 24px;
            margin: 10px;
        }
        #emotion-display {
            font-size: 20px;
            margin: 10px;
            min-height: 24px;
        }
        #error-display {
            color: red;
            margin: 10px;
            min-height: 20px;
        }
        .bonus {
            color: green;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div id="game-container">
        <h1>Hugging Face Emotion Game</h1>
        <p>Click the button! Smile for bonus points!</p>
        
        <div id="score-display">Score: <span id="score">0</span></div>
        <div id="emotion-display">Emotion: <span id="emotion">Neutral</span></div>
        <div id="error-display"></div>
        
        <button id="click-button">CLICK ME!</button>
        
        <div id="video-container">
            <video id="video" autoplay playsinline></video>
            <canvas id="canvas" style="display:none;"></canvas>
        </div>
    </div>

    <script>
        // Game variables
        let score = 0;
        let emotion = "Neutral";
        const API_TOKEN = "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"; // Replace with your token
        
        // DOM elements
        const scoreElement = document.getElementById('score');
        const emotionElement = document.getElementById('emotion');
        const errorElement = document.getElementById('error-display');
        const clickButton = document.getElementById('click-button');
        const video = document.getElementById('video');
        const canvas = document.createElement('canvas');
        const ctx = canvas.getContext('2d');

        // Set up camera with error handling
        async function setupCamera() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ 
                    video: { 
                        facingMode: "user",
                        width: { ideal: 640 },
                        height: { ideal: 480 }
                    } 
                });
                video.srcObject = stream;
                return true;
            } catch (err) {
                showError("Camera error: " + err.message);
                return false;
            }
        }

        // Show errors clearly
        function showError(message) {
            errorElement.textContent = message;
            console.error(message);
        }

        // Clear errors
        function clearError() {
            errorElement.textContent = "";
        }

        // Detect emotion using Hugging Face API
        async function detectEmotion() {
            try {
                // Capture image from video
                canvas.width = video.videoWidth;
                canvas.height = video.videoHeight;
                ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
                
                // Convert to base64 for API
                const imageData = canvas.toDataURL('image/jpeg').split(',')[1];
                
                // Use a face detection model first (important!)
                const faceDetection = await queryHFAPI(
                    "facebook/detr-resnet-50",
                    { inputs: imageData }
                );
                
                if (!faceDetection || !faceDetection[0] || !faceDetection[0].label === "person") {
                    throw new Error("No face detected");
                }
                
                // Then use emotion model
                const emotionResult = await queryHFAPI(
                    "trigaten/emotion",
                    { inputs: imageData }
                );
                
                if (emotionResult && emotionResult[0]) {
                    emotion = emotionResult[0].label;
                    emotionElement.textContent = emotion;
                    
                    // Bonus for happy faces
                    if (emotion.toLowerCase().includes('happy')) {
                        score += 5;
                        scoreElement.textContent = score;
                        scoreElement.classList.add("bonus");
                        setTimeout(() => scoreElement.classList.remove("bonus"), 1000);
                    }
                }
                clearError();
            } catch (error) {
                showError("Detection error: " + error.message);
                emotionElement.textContent = "Error";
            }
        }

        // Generic Hugging Face API call
        async function queryHFAPI(model, data) {
            try {
                const response = await fetch(
                    `https://api-inference.huggingface.co/models/${model}`,
                    {
                        method: "POST",
                        headers: {
                            "Authorization": `Bearer ${API_TOKEN}`,
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify(data)
                    }
                );
                
                if (!response.ok) {
                    throw new Error(`API error: ${response.status}`);
                }
                
                return await response.json();
            } catch (error) {
                throw new Error(`API call failed: ${error.message}`);
            }
        }

        // Game logic
        clickButton.addEventListener('click', () => {
            score++;
            scoreElement.textContent = score;
            detectEmotion();
        });

        // Initialize
        setupCamera();
    </script>
</body>
</html>


NOTE:Create your own Hugging face account. Go to settings . Create a new token . Copy the Token . Search for the line "YOUR_HUGGINGFACE_API_TOKEN".
     (Here it is in 85 line).Replace it with your token
